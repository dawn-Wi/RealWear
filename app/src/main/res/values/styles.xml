<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="taskList_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/gauss_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="objTaskList_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="objTaskList_title">
        <item name="android:textColor">@color/background_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="objTaskList_status">
        <item name="android:background">@drawable/statebox_ui</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>